        "file-loader": "^3.0.1",
        "html-webpack-plugin": "^3.2.0",
        "react": "^16.7.0",
        "react-dom": "^16.7.0",
        "react-router-dom": "^4.3.1",
        "styled-components": "^4.1.3",
        "webpack": "^4.29.0",
        "webpack-dev-server": "^3.1.14"
    },
    "devDependencies": {
        "electron": "^4.0.1",
        "electron-builder": "^20.38.5",
